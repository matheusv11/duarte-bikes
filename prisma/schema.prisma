generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Bikes {
    id            String    @default(cuid()) @id
    model         String
    image         String
    quantity      Int
    rents         Rents[]
    @@map(name: "bikes")
}

model Users {
  id            String    @default(cuid()) @id
  name          String
  address       String
  cpfCnpj       String    @map(name: "cpf_cnpj")
  kind          String
  cellphone     String    @unique
  password      String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  rents         Rents[]
  @@map(name: "users")
}

model Rents {
  id              String    @default(cuid()) @id
  value           Float
  schedule_start  DateTime
  schedule_end    DateTime // If delete User, not delete rent history
  rented          Boolean // Only to block other user to pick this bike while other is paying
  paid            Boolean
  createdAt       DateTime  @default(now()) @map(name: "created_at")
  updatedAt       DateTime  @updatedAt @map(name: "updated_at")
  user  Users?    @relation(fields: [userId], references: [id])
  bike    Bikes?  @relation(fields: [bikeId], references: [id])
  bikeId  String?
  userId  String?
  @@map(name: "rents")
}

model SelledProducts {
  id                String    @default(cuid()) @id
  productName       String    @map(name: "product_name")
  productValue      Float     @map(name: "product_value")
  soldValue         Float     @map(name: "sold_value")
  quantity          Int
  selledAt          DateTime  @map(name: "selled_at")
  createdAt         DateTime  @default(now()) @map(name: "created_at")
  updatedAt         DateTime  @updatedAt @map(name: "updated_at")
  product           Products? @relation(fields: [productId], references: [id])
  productId         String?   @map("product_id")
  @@map(name: "selled_products")
}

model Products {
  id            String    @default(cuid()) @id
  name          String
  description   String?
  buyedValue    Float     @map(name: "buyed_value")   // Value in cents
  soldValue     Float     @map(name: "sold_value")// Value in cents
  quantity      Int
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  selledProducts         SelledProducts[]
  @@map(name: "products")
}